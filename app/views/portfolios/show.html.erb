<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @portfolio_item.img %>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>
      <h5><%= @portfolio_item.subtitle %></h5>
      <hr>
      <em><%= @portfolio_item.description %></em>
      <hr>
      <h3>Technologies</h3>
      <% @portfolio_item.technologies.each do |tech| %>
        <p><%= tech.name %></p>
      <% end %>
    </div>
  </div>
  <%= link_to "View All Portfolio Items", portfolios_path, class: "btn btn-primary mt-3" %>
</div>
