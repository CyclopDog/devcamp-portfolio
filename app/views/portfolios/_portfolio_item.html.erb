<div class="col-md-4">
    <div class="card mb-4 shadow-sm">
    <%= image_tag portfolio_item.thumb unless portfolio_item.thumb.nil? %>
    <div class="card-body">
        <p class="card-text">
            <h2><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></h2>
            <h4><%= portfolio_item.subtitle %></h4>
        </p>
        <%  if logged_in?(:site_admin) %>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <%= link_to "Edit", edit_portfolio_path(portfolio_item), class: "btn btn-sm btn-outline-primary" %>
                    <%= link_to 'Delete Item', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %>
                </div>
            </div>
        <% end %>
    </div>
    </div>
</div>