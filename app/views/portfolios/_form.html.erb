<%= form_for(portfolio_item) do |form| %>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :subtitle %>
          <%= form.text_field :subtitle, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: "form-control", rows: 13 %>
        </div>
      </div>
    </div>
  </div>
  

  <div class="form-group">
    <h3>Technologies</h3>
    <%= form.fields_for :technologies do |tech_form| %>
      <%= tech_form.label :name %>
      <%= tech_form.text_field :name, class: "form-control" %>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-primary btn-block" %>
  </div>
<% end %>